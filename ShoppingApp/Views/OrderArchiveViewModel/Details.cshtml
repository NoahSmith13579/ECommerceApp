@model ShoppingApp.Models.Order

@{ViewData["Title"] = "Order Details";}

<a asp-action="Index">Back to Orders</a>

<div>
    <span>Order Date: @Model.OrderDate.ToShortDateString()</span>
</div>

<div class="card d-flex flex-column m-1">
    <div class="card-header">
        Shipping Address:
    </div>
    <div class="card-body">
        <div>
            <span> @Html.DisplayNameFor(modelItem => modelItem.Address.Street): </span>
            <span>@Html.DisplayFor(modelItem => modelItem.Address.Street)</span>
        </div>
        <div>
            <span> @Html.DisplayNameFor(modelItem => modelItem.Address.Street2): </span>
            <span>@Html.DisplayFor(modelItem => modelItem.Address.Street2)</span>
        </div>
        <div>
            <span> @Html.DisplayNameFor(modelItem => modelItem.Address.City): </span>
            <span>@Html.DisplayFor(modelItem => modelItem.Address.City)</span>
        </div>
        <div>
            <span> @Html.DisplayNameFor(modelItem => modelItem.Address.Country): </span>
            <span>@Html.DisplayFor(modelItem => modelItem.Address.Country)</span>
        </div>
        <div>
            <span> @Html.DisplayNameFor(modelItem => modelItem.Address.ZipCode): </span>
            <span>@Html.DisplayFor(modelItem => modelItem.Address.ZipCode)</span>
        </div>
    </div>
</div>


<container class="product-container">
    @foreach(var item in Model.OrderItems)
    {
        <div class="card m-1">
            <div class="card-header">
                @Html.DisplayFor(modelItem => item.ProductName)
            </div>
            <img 
                src="@Html.DisplayFor(modelItem=> item.ImgUrl)" 
                class="card-img"
            >
            <div class="card-body">
                 
            </div>
            <div class="card-footer">
                <span> (@Html.DisplayFor(modelItem => item.Quantity))</span>
                <span>$@Html.DisplayFor(modelItem => item.UnitPrice) per item</span>

            </div>
        </div>
    }

</container>